# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = off
spelling_languages = en-us,fr-fr

[*.ts]
quote_type = single
indent_size = 4
ij_typescript_use_double_quotes = false

[*.css]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
